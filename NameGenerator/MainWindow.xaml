<Window x:Class="NameGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NameGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="525">
    <StackPanel Orientation="Vertical">

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="How many?"/>
            <TextBox Text="{Binding OutputCount}"/>
        </StackPanel>
        
        <HeaderedContentControl Header="Name Origins:">
            <ListBox ItemsSource="{Binding Origins}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding DisplayName}" IsChecked="{Binding IsChecked}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </HeaderedContentControl>
        

        <Button Click="Generate_Click">Get Names</Button>
        <HeaderedContentControl Header="Your names:">
            <ListBox ItemsSource="{Binding Generated}"/>
        </HeaderedContentControl>


    </StackPanel>
</Window>
